<%= form_for(@topic) do |f| %>
<%= render 'layouts/error_messages' %>
  <div class="form-group">
    <%= f.label :user_name, "お名前" %>
    <%= f.text_field :user_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :subcategories, "カテゴリー" %>
  <div class="checkbox">
    <%= collection_check_boxes(:topic, :subcategory_ids, Subcategory.all, :id, :content) do |b| %>
      <%= b.label { b.check_box + b.text } %>
    <% end %>
  </div>
</div>

  <div class="form-group">
    <%= f.label :content, "内容" %>
    <%= f.text_area :content, size: "40x10", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "スレッドを作成する", class: 'btn btn-primary' %>
  </div>
<% end %>
